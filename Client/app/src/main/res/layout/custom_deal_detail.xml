<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:id="@+id/deal_Details"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginStart="5dp"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDealGroup"
            android:text="Chi tiêu/Thu nhập"
            android:textColor="@android:color/holo_green_dark"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/date_Deal"
            android:text="XX - XX - XXXX"
            android:textColor="@color/com_facebook_button_background_color"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </TableRow>

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/nav_drawer_vertical_spacing_listing_divider_top"
        android:background="@color/black"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <ImageView
            android:id="@+id/icon_transection"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_category_give"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/icon_transection"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <TextView
                android:id="@+id/txt_deal_group_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:focusableInTouchMode="false"/>


                <TextView
                    android:id="@+id/txtDealDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="11dp"
                    android:layout_marginLeft="12dp"
                    android:padding="2dp"
                    android:inputType="text|textMultiLine"
                    android:scrollHorizontally="false"
                    android:maxLines ="4"
                    android:textColor="@color/blue_500"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDealMoney"
            android:text="$$$"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="#E84A5F"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </RelativeLayout>

</LinearLayout>