<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_overview"
                android:layout_marginEnd="10dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <DatePicker
                android:id="@+id/dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:layout_marginBottom="-80dp"
                android:layout_marginTop="-94dp"
                android:theme="@style/Theme.SelectDate"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_income"
                android:textSize="15sp"
                android:id="@+id/income_report"
                />

            <TextView
                android:id="@+id/total_incomeMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_income_plan"
                android:textSize="15sp"
                android:id="@+id/incomePlan_report"
                />

            <TextView
                android:id="@+id/total_incomePlanMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_overview_different"
                android:textSize="15sp"
                android:id="@+id/incomeDifferent_report"
                />

            <TextView
                android:id="@+id/total_incomeDifferentMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_alignParentStart="true"
                android:id="@+id/piechart1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:padding="8dp" />


            <com.github.mikephil.charting.charts.PieChart
                android:layout_alignParentEnd="true"
                android:id="@+id/piechart3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:padding="8dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_outcome"
                android:textSize="15sp"
                android:id="@+id/expense_report"
                />

            <TextView
                android:id="@+id/total_expenseMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_outcome_plan"
                android:textSize="15sp"
                android:id="@+id/expensePlan_report"
                />

            <TextView
                android:id="@+id/total_expensePlanMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15dp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_overview_different"
                android:textSize="15sp"
                android:id="@+id/expenseDifferent_report"
                />

            <TextView
                android:id="@+id/total_expenseDifferentMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_alignParentStart="true"
                android:id="@+id/piechart2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:padding="8dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:layout_alignParentEnd="true"
                android:id="@+id/piechart4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:padding="8dp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>