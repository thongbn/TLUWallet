<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_income"
                android:textSize="15sp"
                android:id="@+id/income_report"
                />

            <TextView
                android:id="@+id/total_incomeMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_income_plan"
                android:textSize="15sp"
                android:id="@+id/incomePlan_report"
                />

            <TextView
                android:id="@+id/total_incomePlanMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_overview_different"
                android:textSize="15sp"
                android:id="@+id/incomeDifferent_report"
                />

            <TextView
                android:id="@+id/total_incomeDifferentMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:text="@string/common_income"
                    android:textSize="12sp"
                    android:id="@+id/income_report_graph" />

                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="8dp"
                    app:egLegendTextSize="15sp"
                    app:egUsePieRotation="true"
                    app:egValueTextSize="10sp"
                    app:egAutoCenter="true"
                    app:egOpenClockwise="false"
                    app:egInnerValueUnit="%"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="@string/common_income_plan"
                    android:textSize="12sp"
                    android:id="@+id/incomePlan_report_graph" />

                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="8dp"
                    app:egLegendTextSize="15sp"
                    app:egUsePieRotation="true"
                    app:egValueTextSize="10sp"
                    app:egAutoCenter="true"
                    app:egOpenClockwise="false"

                    app:egInnerValueUnit="%"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_outcome"
                android:textSize="15sp"
                android:id="@+id/expense_report"
                />

            <TextView
                android:id="@+id/total_expenseMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_outcome_plan"
                android:textSize="15sp"
                android:id="@+id/expensePlan_report"
                />

            <TextView
                android:id="@+id/total_expensePlanMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15dp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:text="@string/common_overview_different"
                android:textSize="15sp"
                android:id="@+id/expenseDifferent_report"
                />

            <TextView
                android:id="@+id/total_expenseDifferentMoneyReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="XXX"
                android:textSize="15sp"
                android:textColor="@color/blue_500" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:text="@string/common_outcome"
                    android:textSize="12sp"
                    android:id="@+id/expanse_report_graph" />

                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="8dp"
                    app:egLegendTextSize="15sp"
                    app:egUsePieRotation="true"
                    app:egValueTextSize="10sp"
                    app:egAutoCenter="true"
                    app:egOpenClockwise="false"
                    app:egInnerValueUnit="%"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="@string/common_outcome_plan"
                    android:textSize="12sp"
                    android:id="@+id/expansePlan_report_graph" />

                <org.eazegraph.lib.charts.PieChart
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/piechart4"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="8dp"
                    app:egLegendTextSize="15sp"
                    app:egUsePieRotation="true"
                    app:egValueTextSize="10sp"
                    app:egAutoCenter="true"
                    app:egOpenClockwise="false"
                    app:egInnerValueUnit="%"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>