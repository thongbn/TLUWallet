<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditPlan" >

    <include
        layout="@layout/toolbar_save_plan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/pGroupImg"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/icon_not_selected" />

            <TextView
                android:id="@+id/pGroupDetails"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="25dp"
                android:text="@string/common_pick_group" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/edit_plan_type_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="$"
                android:textSize="20sp"
                android:textColor="@color/primary_darker"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"/>


            <EditText
                android:id="@+id/edit_Money_Plan"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:scrollHorizontally="false"
                android:maxLength ="13"
                android:ems="10"
                android:textColor="@color/black"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:hint="@string/common_edit_money"
                android:digits="0123456789.,"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:layout_height="2dp"
            android:layout_marginTop="-7dp"
            android:layout_below="@+id/text"
            android:background="@color/iron"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/pRowTextDetailMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:src="@drawable/ic_adjustment"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/edit_Detail_Plan"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="text|textMultiLine"
                android:hint="@string/common_note"
                android:singleLine="true"
                android:maxLength ="80"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:layout_height="2dp"
            android:layout_marginTop="-7dp"
            android:layout_below="@+id/text"
            android:background="@color/iron"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/pRowTextDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_calendar"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/edit_Date_Plan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:hint="@string/common_date_pick"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            android:layout_height="2dp"
            android:layout_marginTop="-7dp"
            android:layout_below="@+id/text"
            android:background="@color/iron"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/delete_plan"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_transfer_money"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tranfer_plan"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
