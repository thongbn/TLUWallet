<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DisplayDeal"
    android:id="@+id/activity_create_deal">

    <include
            layout="@layout/toolbar_save_deal" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TableRow
            android:id="@+id/pickGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageGroup"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_category_all" />

            <TextView
                android:id="@+id/textGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:hint="Chọn nhóm"
                android:layout_marginTop="5dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/dRowEditMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/dRowTextEditMoney"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Số tiền"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/edit_Money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollHorizontally="false"
                android:maxLength ="8"
                android:ems="10"
                android:textColor="@color/black"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"/>

            <TextView
                android:id="@+id/deal_type_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABC"
                android:textSize="20sp"
                android:textColor="@color/primary_darker"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </TableRow>

        <TableRow
            android:id="@+id/dRowDetailMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/dRowTextDetailMoney"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ghi chú"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/edit_Detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="text|textMultiLine"
                android:scrollHorizontally="false"
                android:maxLines ="4"
                android:maxLength ="2000"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow
            android:id="@+id/dRowDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/dRowTextDateTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Chọn ngày"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <EditText
                android:id="@+id/edit_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            </TableRow>

        <TableRow
            android:id="@+id/wRowPickWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            android:id="@+id/dRowGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/dType_Money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại tiền"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginBottom="10dp"
                android:drawSelectorOnTop="true" />
        </TableRow>

    </TableLayout>

</LinearLayout>
