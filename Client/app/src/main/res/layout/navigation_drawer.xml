<?xml version="1.0" encoding="utf-8"?>
<com.client.customViews.ScrimInsetsFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_navigation_drawer_rootLayout"
    style="@style/ScrimInsetsLayout"
    tools:context=".MainActivity"
    tools:layout_marginEnd="?actionBarSize"
    tools:layout_marginRight="?actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/navigation_drawer_account_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?selectableItemBackground">

            <FrameLayout
                android:foreground="@color/black_alpha_50"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%">

                <ImageView
                    android:id="@+id/navigation_drawer_user_account_picture_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_nav_drawer_account_background"
                    tools:ignore="ContentDescription" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/navigation_drawer_account_section"
                android:paddingBottom="@dimen/nav_drawer_vertical_spacing_listing"
                android:paddingEnd="@dimen/nav_drawer_vertical_keyline_right"
                android:paddingLeft="@dimen/nav_drawer_vertical_keyline_icon_left"
                android:paddingRight="@dimen/nav_drawer_vertical_keyline_right"
                android:paddingStart="@dimen/nav_drawer_vertical_keyline_icon_left"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%">

                <LinearLayout
                    android:id="@+id/navigation_drawer_account_information"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/navigation_drawer_account_information_display_name"
                        style="@style/Body2.White.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tools_text_account_information_username" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <!-- Drawer Item -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigation_drawer_background"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/nav_drawer_vertical_spacing_listing"
            android:paddingTop="@dimen/nav_drawer_vertical_spacing_listing">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/navigation_drawer_linearLayout_entries_root_view">

                <FrameLayout
                    android:id="@+id/navigation_drawer_list_linearLayout_wallet"
                    style="@style/NavDrawerRowLayout.Main"
                    tools:background="@color/nav_drawer_row_item_selected">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_icon_wallet"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_account_balance_wallet"
                        tools:tint="@color/nav_drawer_item_icon_selected"/>

                    <TextView
                        android:id="@+id/navigation_drawer_item_textView_wallet"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_wallet"
                        tools:textColor="@color/nav_drawer_item_text_selected"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/navigation_drawer_list_linearLayout_group"
                    style="@style/NavDrawerRowLayout.Main"
                    tools:background="@color/nav_drawer_row_item_selected">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_list_group"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_group_work"
                        tools:tint="@color/nav_drawer_icon"/>

                    <TextView
                        android:id="@+id/navigation_drawer_item_textView_group"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_group" />

                </FrameLayout>

                <include
                    layout="@layout/navigation_drawer_divider"/>

                <FrameLayout
                    android:id="@+id/navigation_drawer_list_linearLayout_database"
                    style="@style/NavDrawerRowLayout.Main"
                    tools:background="@color/nav_drawer_row_item_selected">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_database"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_save"

                        />

                    <TextView
                        android:id="@+id/navigation_drawer_item_textView_database"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_database" />

                </FrameLayout>

                <include
                    layout="@layout/navigation_drawer_divider"/>

                <FrameLayout
                    android:id="@+id/navigation_drawer_list_linearLayout_help"
                    style="@style/NavDrawerRowLayout.Main"
                    tools:background="@color/nav_drawer_row_item_selected">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_help"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_help"

                        />

                    <TextView
                        android:id="@+id/navigation_drawer_item_textView_help"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_help" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/navigation_drawer_list_linearLayout_settings"
                    style="@style/NavDrawerRowLayout.Main"
                    tools:background="@color/nav_drawer_row_item_selected">

                    <ImageView
                        android:id="@+id/navigation_drawer_items_settings"
                        style="@style/NavDrawerRowItemIcon"
                        android:src="@drawable/ic_settings"

                        />

                    <TextView
                        android:id="@+id/navigation_drawer_item_textView_settings"
                        style="@style/NavDrawerRowItemText"
                        android:text="@string/nav_drawer_item_settings" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</com.client.customViews.ScrimInsetsFrameLayout>