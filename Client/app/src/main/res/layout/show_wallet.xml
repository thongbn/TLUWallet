<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/show_wallet"
    android:clickable="true"
    android:paddingBottom="@dimen/nav_drawer_vertical_spacing_listing"
    android:paddingTop="@dimen/nav_drawer_vertical_spacing_listing"
    android:background="@color/white">


    <ImageView
        android:id="@+id/navigation_drawer_wallet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@drawable/icon" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/navigation_drawer_item_textView_wallet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:padding="2dp"
            android:textColor="#33CC33" />

    </FrameLayout>

    <ImageView
        android:background="@drawable/ic_navigation_arrow_down"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:backgroundTint="@color/black"
        android:id="@+id/click_to_slide"/>


</LinearLayout>