<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/blue_500</item>

        <item name="android:windowBackground">@color/primary_material_light</item>
        <item name="android:textColor">@color/text_main</item>

        <item name="colorControlNormal">@color/background</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/blue_500</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/blue_500</item>
        <item name="android:colorButtonNormal">@color/blue_500</item>

    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:colorButtonNormal">@android:color/transparent</item>

    </style>

    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.WithNavDrawer">
    </style>
    <style name="Body2.White.Primary" parent="TextAppearance.AppCompat.Body2">
    </style>

    <style name="Body1.White.Primary" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="NavDrawerRowItemText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/nav_drawer_item_main_text</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_text_left</item>
    </style>

    <!-- ScrimInsetLayout -->
    <style name="ScrimInsetsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>
        <item name="insetForeground">@color/primary</item>
    </style>

    <!-- Material Design Navigation Drawer -->
    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowLayout.Main">
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
    </style>

    <style name="NavDrawerRowLayout.Secondary">
        <item name="android:tag">@string/tag_nav_drawer_special_entry</item>
    </style>

    <style name="NavDrawerRowItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_icon_left</item>
    </style>

    <style name="CustomStyleButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>
